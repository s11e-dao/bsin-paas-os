<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.flyray.bsin.infrastructure.mapper.MerchantAppMapper">
    <resultMap id="BaseResultMap" type="me.flyray.bsin.domain.entity.MerchantApp">
        <result column="serial_no" jdbcType="VARCHAR" property="serialNo"/>
        <result column="tenant_id" jdbcType="VARCHAR" property="tenantId"/>
        <result column="merchant_no" jdbcType="VARCHAR" property="merchantNo"/>
        <result column="product_name" jdbcType="VARCHAR" property="productName"/>
        <result column="product_id" jdbcType="VARCHAR" property="productId"/>
        <result column="product_type" jdbcType="VARCHAR" property="productType"/>
        <result column="product_secret" jdbcType="VARCHAR" property="productSecret"/>
        <result column="product_description" jdbcType="VARCHAR" property="productDescription"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="del_flag" jdbcType="INTEGER" property="delFlag"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="notify_url" jdbcType="VARCHAR" property="notifyUrl"/>
    </resultMap>

    <update id="delete">
        update crm_merchant_product
        set del_flag = 1
        where serial_no = #{serialNo}
    </update>

    <select id="getPageList" resultMap="BaseResultMap">
        select serial_no,
        tenant_id,
        merchant_no,
        product_name,
        product_id,
        product_type,
        product_secret,
        product_description,
        create_time,
        update_time,
        del_flag,
        status
        from crm_merchant_product
        where del_flag = 0
        <if test="productName != null">
            and product_name like concat('%',#{productName},'%')
        </if>
        <if test="productId != null">
            and product_id = #{productId}
        </if>
        <if test="tenantId != null">
            and tenant_id = #{tenantId}
        </if>
        <if test="productSecret != null">
            and product_secret = #{productSecret}
        </if>
    </select>

    <select id="getProductInfo" resultMap="BaseResultMap">
        select serial_no,
               tenant_id,
               merchant_no,
               product_name,
               product_id,
               product_type,
               product_secret,
               product_description,
               create_time,
               update_time,
               del_flag,
               status
        from crm_merchant_product
        where del_flag = 0 and
            tenant_id = #{tenantId} and  merchant_no = #{merchantNo} and product_id = #{productId}
    </select>

    <select id="getProductInfoByProductId" resultMap="BaseResultMap">
        select serial_no,
               tenant_id,
               merchant_no,
               product_name,
               product_id,
               product_type,
               product_secret,
               product_description,
               create_time,
               update_time,
               del_flag,
               status
        from crm_merchant_product
        where del_flag = 0 and product_id = #{productId}
    </select>

</mapper>